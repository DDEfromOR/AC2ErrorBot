          "data": {
            "nextCardToSend": 2,
            "currentCard": 1,
            "option": "coffee"
          }
        },
        {
          "type": "Action.Execute",
          "verb": "order",
          "title": "Tea",
          "data": {
            "nextCardToSend": 2,
            "currentCard": 1,
            "option": "tea"
          }
        },
        {
          "type": "Action.Execute",
          "verb": "order",
          "title": "Water",
          "data": {
            "currentCard": 1,
            "nextCardToSend": 2,
            "option": "water"
          }
        }
      ]
    },
    {
